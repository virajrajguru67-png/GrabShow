# Server
PORT=5000
NODE_ENV=development

# Auth
JWT_SECRET="dev-secret-change-me"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_TTL_DAYS=30

# Database
# Prisma expects a single DATABASE_URL. The default uses MySQL with username root and no password.
DATABASE_URL="mysql://root:@localhost:3306/streamflix"

# SMTP Configuration (for password reset emails)
# Leave empty if SMTP is not configured - token will be returned in response for development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@streamflix.com
SMTP_FROM_NAME="StreamFlix Tickets"

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000
